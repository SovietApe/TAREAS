<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar La Novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
            <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo" value="{{novedades.titulo}}">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" name="subtitulo" class="form-control" placeholder="subtitulo">{{novedades.subtitulo}}</textarea>
                </div>
                <div class="mb-3 row">
                    <textarea name="cuerpo" placeholder="Cuerpo" type="text" class="form-control">{{novedades.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
             {{#if error}}
                    <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>