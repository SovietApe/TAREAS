<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" name="subtitulo" class="form-control" placeholder="subtitulo"></textarea>
                </div>
                <div class="mb-3 row">
                    <textarea name="cuerpo" placeholder="Cuerpo" type="text" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
    {{#if error}}
    <h5>{{message}}</h5>
    {{/if}}
</div>